@import "_constants.styl"

.media-library
  display flex
  flex-grow 1
  padding-left 3px
  overflow-y auto
  width 517px

  .folder > .name, .track
    cursor pointer

  .folder
    text-overflow ellipsis
    overflow-x hidden
    white-space nowrap
    > .folder-content
      display none
    > .name > .folder-icon
      //background-image url("/web/folder.png")
      background-size contain
      display inline-block
      width 13px
      height 13px
      margin-right 4px

    &.opened
      > .folder-content
        display block
      //> .name > .folder-icon
        //background-image url("/web/folder_open.png")

  .track
    .file-icon
      //background-image url("/web/note.png")
      background-size contain
      display inline-block
      width 13px
      height 13px
      margin-right 2px
