@import "_constants.styl"

.playlist
  height 100%
  padding 3px
  overflow-y auto

  .tracks
    width 100%
    text-align left
    border-spacing: 0

    th
      border-bottom 1px solid $block-border-color

    th, td
      width 25%

    tbody
      tr
        cursor pointer
      tr:nth-child(odd)
        background-color darken($block-background-color, 20%)
      tr.selected {
        background-color dodgerblue
      }
