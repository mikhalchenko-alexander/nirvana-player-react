@require "_constants.styl"

.player-controls
  display flex
  flex-grow 0
  height 150px
  width 500px
  border-bottom $block-border-width solid $block-border-color
  color $block-border-color
  padding 3px

  .btn-player-control
    width 50px
    height 50px
    margin 1px
    border 2px solid $block-border-color
    display flex
    justify-content center
    align-items center
