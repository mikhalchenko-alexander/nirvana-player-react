@require "_constants.styl"

.player-controls
  border-bottom $block-border-width solid $block-border-color
  display flex
  flex-grow 0
  min-height 150px
  padding 3px
  width 500px

  .btn-player-control
    cursor pointer
    align-items center
    border 2px solid $block-border-color
    display flex
    height 50px
    justify-content center
    margin 1px
    width 50px

  .btn-player-control:hover
    background rgba(0, 0, 0, .2)

  .btn-player-control:active
    background rgba(0, 0, 0, .5)
